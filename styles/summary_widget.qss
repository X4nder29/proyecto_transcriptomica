#SummaryLabel {
    font-size: 16px;
    font-weight: bold;
}

#HelpButton {
    color: #FFFFFF;
    border: none;
    border-radius: 5px;
    padding: 5px 10px;
}

#HelpButton:hover {
    background-color: #404040;
}

#SummaryItem {
    border-radius: 5px;
    padding: 10px;
    text-align: left;
}

#SummaryItem:checked {
    background-color: #303030;
}

#SummaryItem:!checked:hover {
    background-color: #404040;
}
