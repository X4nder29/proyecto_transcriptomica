#WorkspaceItem:hover {
    background-color: #cce8e5;
    border-radius: 5px;
}

#IconLabel {
    background-color: #006a66;
    border-radius: 8px;
}
#IconLabel:disabled {
    background-color: gray;
}

#FileNameLabel {
    font-size: 16px;
    font-weight: bold; 
    color: #212529;
}
#FileNameLabel:disabled {
    color: gray;
}

#FilePathLabel {
    color: #31373d;
    font-size: 12px;
}
#FilePathLabel:disabled {
    color: gray;
}

#ActionButton {
    background-color: transparent;
    border-radius: none;
}

#ActionButton:hover {
    background-color: #E2E6EA;
    border-radius: 8px;
}

#Menu {
    background-color: #F8F9FA;
    border-radius: 5px;
}

#Menu::item {
    padding: 5px 10px;
    border-radius: 5px;
    color: #212529;
}

#Menu::item {
    background-color: #E2E6EA;
}