QWidget {
	background-color: #324b49;
	border-radius: 5px;
}

#Checkbox {
	border: none;
	border-radius: 5px;
	padding: 0px;
	width: 20px;
	height: 20px;
}

#Checkbox:hover {
	background-color: #006a66;
}

QLabel {
	font-size: 14px;
	font-weight: bold;
	color: #FFFFFF;
}

QComboBox {
	background-color: #cce8e5;
	color: #324b49;
	border: none;
	border-radius: 5px;
	padding: 5px 15px;
    text-align: center;
}

QComboBox:on {
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
}

QComboBox:hover {
	background-color: #a6bdba;
}

QComboBox:disabled {
	color: #72aca8;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 0px;
    border: none;
}

QComboBox::down-arrow {
    image: none;
}

QComboBox QAbstractItemView {
	background: #cce8e5;
    outline: none;
}

QComboBox QAbstractItemView::item {
	padding: 5px;
	color: #324b49;
}
