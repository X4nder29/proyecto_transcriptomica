#NumberSelector {
    background: #6C757D;
    border-radius: 5px;
    color: #FFFFFF;
}

QSpinBox {
    padding: 8px 10px;
    background: #6C757D;
    border: none;
    color: #FFFFFF;
}
QSpinBox:disabled {
    color: #A9A9A9;
}
QSpinBox > QLineEdit {
    background: none;
    color: #FFFFFF;
}

#IncrementButton, #DecrementButton {
    padding: 0px 10px;
    background: none;
    color: #FFFFFF;
}
#IncrementButton:disabled, #DecrementButton:disabled {
    color: #A9A9A9;
}
#IncrementButton:hover, #DecrementButton:hover {
    background: #5A6268;
}
#IncrementButton:pressed, #DecrementButton:pressed {
    background: #545B62 ;
}

#IncrementButton {
    border-top-left-radius: 0px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

#DecrementButton {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
}