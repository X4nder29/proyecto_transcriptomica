#InstalledLabel, #UninstalledLabel {
    font-size: 16px;
    font-weight: bold;
    color: #212529;
}

#LinkLineEdit {
    border: none;
    border-radius: 5px;
    padding: 10px;
    background-color: #4a6361;
    color: #FFFFFF;
}

#AddButton {
    background-color: #006a66;
    color: white;
    border: none;
    border-radius: 5px;
    padding: 10px;
}

#AddButton:hover {
    background-color: #00504d;
}

#InstalledScrollArea, #UninstalledScrollArea {
    background-color: transparent;
    border: none;
}

#uninstalledWidget, #installedWidget {
    background-color: transparent;
    border: none;
}
